generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Vendor {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  image String
}

model Category {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  image String
  Product Product[]
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  image    String
  price    Int
  quantity Int
  category Category @relation(fields: [categoryId], references: [id])
  categoryId  String   @db.ObjectId
}
